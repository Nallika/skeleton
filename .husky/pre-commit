#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
ORANGE='\033[0;33m'
NC='\033[0m' # No Color

printf "${YELLOW}üîç Running pre-commit checks...${NC}\n"

npx lint-staged
LINT_STAGED_EXIT_CODE=$?

if [ $LINT_STAGED_EXIT_CODE -ne 0 ]; then
  printf "${RED}‚ùå Lint-staged checks failed${NC}\n"
  exit 1
fi

printf "${GREEN}‚úÖ All pre-commit checks passed!${NC}\n"
printf "${ORANGE}üéÉ Don't forget to bump versions!${NC}\n"
